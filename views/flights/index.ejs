<!-- views/flights/index.ejs -->
<%- include('../partials/header') %>

<h2>All Flights</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departs</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(flight => { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs.toISOString().split('T')[0] %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/flights/new">Add a New Flight</a>

<%- include('../partials/footer') %>